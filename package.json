{
  "name": "bouncer",
  "version": "1.0.0",
  "description": "login/logout/signup endpoints plugin for hapijs",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "./node_modules/tape/bin/tape ./test/*.test.js | ./node_modules/.bin/tap-spec",
    "jshint": "./node_modules/.bin/jshint -c ./.jshintrc --exclude-path .gitignore .",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/tape/bin/tape ./test/*.test.js && ./node_modules/.bin/istanbul check-coverage --statements 95 --functions 95 --lines 95 --branches 95"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundersandcoders/bouncer.git"
  },
  "keywords": [
    "hapijs",
    "verification",
    "user",
    "token",
    "login",
    "logout",
    "signup"
  ],
  "author": "William Fisher, Naomi Gaynor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foundersandcoders/bouncer/issues"
  },
  "homepage": "https://github.com/foundersandcoders/bouncer",
  "devDependencies": {
    "istanbul": "^0.3.13",
    "jshint": "^2.7.0",
    "pre-commit": "^1.0.6",
    "tap-spec": "^3.0.0",
    "tape": "^4.0.0"
  },
  "pre-commit": [
    "jshint",
    "coverage"
  ]
}
